<!-- This is the project file for the LocalLLM.Api project. -->
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <!-- The target framework for the project. -->
    <TargetFramework>net9.0</TargetFramework>
    <!-- Whether to enable nullable reference types. -->
    <Nullable>enable</Nullable>
    <!-- Whether to enable implicit usings. -->
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <ItemGroup>
    <!-- The package reference for OllamaSharp. -->
    <PackageReference Include="OllamaSharp" Version="5.3.6" />
    <!-- Optional: remove this line if you don't need it -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" />
    <!-- The package reference for Swashbuckle.AspNetCore. -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>
</Project>